{
    "extends": "@dxp/typescript-config/ui.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@dxp/ui/*": ["./src/*"],
            "@dxp/ui/elements/*": ["./src/elements/*"],
            "@dxp/ui/components/*": ["./src/components/*"],
            "@dxp/ui/providers/*": ["./src/providers/*"],
            "@dxp/ui/hooks/*": ["./src/hooks/*"],
            "@dxp/ui/lib/*": ["./src/lib/*"],
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
